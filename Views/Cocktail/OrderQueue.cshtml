@model MVCBartenderApp.Models.OrderQueue
<h2>Order Queue</h2> 
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Cocktail ID</th>
            <th>Cocktail Name</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders) {
            var cocktail = Model.Cocktails
                .FirstOrDefault(c => c.ID == order.CocktailID);
            <tr>
                <td>@order.ID</td>
                <td>@order.CocktailID</td>
                <td>@(cocktail != null ? cocktail.Name : "Unknown")</td>
                <td>@order.CustomerName</td>
                <td>@order.CustomerEmail</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>